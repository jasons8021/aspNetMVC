<script>
    var CategoryName = '@ViewBag.CategoryName';
    var isAuth = @User.Identity.IsAuthenticated;

    $(function () {
        $('#search-box').val("");
    });

    function checkAP(e) {
        e=$(e);
        getCurrentAP(function (v) {
            ap = v;

            getIsAuth(function() {
                if( parseInt(ap) >= 10)
                {
                    location.href = e.attr("link");
                }
                else
                {
                    alert('體力不足');
                }
            })
        });
    }

    function getCurrentAP(call) {
        $.ajax({
            type: 'GET',
            url: 'https://localhost:44301/api/iTed2/getCurrentAP?aspId=' + '@User.Identity.GetUserId()',
            contentType: 'application/json',
            success: function (response) {
                if ((typeof (call) != "undefined")) {
                    ap = response;
                    return call(ap);
                }
            },
            error: function (response) {

            }
        });
    }

    function getIsAuth(call) {
        $.ajax({
            type: 'GET',
            url: 'https://localhost:44301/api/iTed2/getIsAuth',
            contentType: 'application/json',
            success: function (response) {
                if (response) {
                    return call();
                }
                else {
                    alert('請先登入');
                }
            },
            error: function (response) {

            }
        });
    }
</script>
